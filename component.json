{
  "title": "Hubspot",
  "description": "Hubspot OIH Connector",
  "docsUrl": "https://github.com/openintegrationhub/snazzy-adapter",
  "buildType": "docker",
  "credentials": {
    "fields": {
      "apikey": {
        "label": "Your hubspot API key",
        "required": true,
        "viewClass": "TextFieldView",
        "placeholder": "46u08jvqw93rjsddafidpirs"
      }
    }
  },
  "triggers": {
    "getContacts": {
      "title": "Fetch Person Contacts",
      "description": "Get Hubspot person (contact) contacts",
      "type": "polling",
      "main": "./lib/triggers/getContacts.js"
    },
    "getOrganizations": {
      "title": "Fetch Organizaton Contacts",
      "description": "Get Hubspot organization (account) contacts",
      "type": "polling",
      "main": "./lib/triggers/getOrganizations.js"
    },
    "getOrganizationsAndContacts": {
      "title": "Fetch Organizaton Contacts",
      "description": "Get Hubspot organization (account) and person (contact) contacts including the refrence to organization",
      "type": "polling",
      "main": "./lib/triggers/getOrganizationsAndContacts.js"
    }
  },
  "actions": {
    "upsertContact": {
      "title": "Upsert a person contact",
      "description": "Upsert Hubspot person contacts (contact)",
      "type": "polling",
      "main": "./lib/actions/upsertContact.js"
    },
    "upsertOrganization": {
      "title": "Upsert a organization contact",
      "description": "Upsert Hubspot organization contacts (account)",
      "type": "polling",
      "main": "./lib/actions/upsertOrganization.js"
    }
  }
}
